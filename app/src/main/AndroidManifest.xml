<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tonymcdonagh.Caffeined">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/caffeined_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/caffeined_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.example.tonymcdonagh.Caffeined.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.tonymcdonagh.Caffeined.MainActivity"
            android:label="Caffeined">




            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>


        <activity android:name="com.example.tonymcdonagh.Caffeined.SearchActivity"
            android:label="Caffeined - Search"></activity>
        <activity android:name="com.example.tonymcdonagh.Caffeined.FilterActivity"
            android:label="Caffeined - Filter"></activity>
    </application>

</manifest>